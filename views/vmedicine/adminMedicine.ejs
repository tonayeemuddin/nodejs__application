<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <!-- font-awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous" />
    <title>Admin</title>
  </head>
  <body>
    
  <div class="container mt-5">
    <h4 class="mt-5 text-danger">Admin</h4>
    <h4 class="mb-5 d-inline">Welcome, <%=user.uname%> </h4>

    <div class="float-right h6">
      <a href="/user/edit/admin/<%= user.uid %>" class="mr-5">
        <i class="fas fa-edit"></i>Profile
      </a>
      <a href="/logout" class="text-danger">
        <i class="fas fa-power-off  pr-1"></i>Logout
      </a>
    </div>

    <div class="card my-4 alert-warning">
      <div class="card-body pt-2 pb-1 h6">
        <a class='mx-2' href="/user/vuser/adminHome">Home </a>|
        <a class='mx-2' href="/medicine/vmedicine/adminMedicine">Medicine </a>|
        <a class='mx-2' href="/order/vorder/adminOrder">Orders </a>
      </div>
    </div>



    <h5 class="">Medicine:</h5>
    <a href=""  data-toggle="modal" data-target="#addMedicine"><i class="fa fa-plus-square h3" aria-hidden="true"></i></a>
    <table class="table table-hover">
      <thead class="thead-dark">
        <tr>
          <th scope="col">mid</th>
          <th scope="col">mname</th>
          <th scope="col">mgenre</th>
          <th scope="col">mprice</th>
          <th scope="col">mstatus</th>
          <th scope="col">action</th>
          
        </tr>
      </thead>
      <tbody>


        <%
        medicine.forEach( function(std){ %>
        <tr>
          <th scope="row"><%= std.mid %></th>
          <td><%= std.mname %></td>
          <td><%= std.mgenre %></td>
          <td><%= std.mprice %></td>
          <td><%= std.mstatus %></td>
          <td colspan="2">
            <a href="/medicine/adminEditMedicine/<%= std.mid %>"><i class="fas fa-edit text-warning mr-3"></i></a> |
            <a href="/medicine/adminDeletemedicine/<%= std.mid %>"><i class="fas fa-trash-alt text-danger ml-3"></i></a>
          </td>
        </tr>

		<%
			}); 
		%>
        
      </tbody>
    </table>
    
    <!-- model add medicine -->
<form method="POST" action="/medicine/addMedicine">
<div class="modal fade" id="addMedicine" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Add Medicine</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <!--  -->
        <div class="form-group">
          <label for="mname">mname</label>
          <input type="" class="form-control" id="mname" name="mname">
        </div>
        <div class="form-group">
          <label for="mgenre">mgenre</label>
          <input class="form-control" id="mgenre" name="mgenre">
        </div>
        <div class="form-group">
          <label for="mprice">mprice</label>
          <input class="form-control" id="mprice" name="mprice">
        </div>
        <div class="form-group">
          <label for="">mstatus</label>
          <select class="form-control" name="mstatus">
            <option selected value="available">Available</option>
            <option value="not available">Not available</option>
          </select>
        </div>
        <!--  -->
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save</button>
      </div>
    </div>
  </div>
</div>
</form>
    <!-- model add medicine -->
    
  </div>








