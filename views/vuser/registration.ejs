    <title>Registration</title>
  </head>
  <body>
    
  <div class="container">
    
    <h4 class="mt-5 mb-5 text-danger">Online Medicine Shop!</h4>
    <h5 class="mt-5 mb-5">Registration</h5>

    
    <form method="POST">
      <div class="form-group">
        <label for="uname">uname</label>
        <input type="" class="form-control" id="uname" name="uname">
      </div>
      <div class="form-group">
        <label for="uphone">uphone</label>
        <input class="form-control" id="uphone" name="uphone">
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">uemail</label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="uemail">
      </div>
      <div class="form-group">
        <label for="">urole</label>
        <select class="form-control" name="urole">
          <option selected value="customer">Customer</option>
          <option value="admin" <% var v='disabled'; if(urole == 'customer'){ %> <%= v %> <% } %> >Admin</option>
        </select>
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">upassword</label>
        <input type="password" class="form-control" id="exampleInputPassword1" name="upassword">
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>


  </div>








